body,html{
	margin:0;
	padding:0;
	font-family:encabezado;
	background-color: #F1F1F1 ;
}

@font-face{
	font-family:encabezado;
	src:url("../fonts/NotoSansKR-Light.otf");
	
}


.informes{
	
	background-color:#33CDFF;
	width:100%;
	height:18%;
	padding:0.2em;
}


.informes > h2{
  
  font-family:encabezado;
  display:inline-block;
  color:#FFF;
  font-size:2.5em;
  padding:2px;
  margin-left:0.5em;

  
}

.boton_1{
	

  background-repeat:no-repeat;
  height:25px;
  width:40px;
  background-position:center;
  margin-left:1.5em;
}

.caja_1{
	
	width:25%;
	float:left;
}

.boton_2{
	
	text-decoration:none;
	padding: 8px;
    font-weight: 600;
    font-size: 20px;
    color: #ffff;
    background-color:blue;
	display:inline-block;
	margin:1em 0.1em 0.1em 1em;
  }

.subtitulo{
	
	margin:0.1em 0.1em 0.2em 1.2em;
	color:#12495B;
	font-size:18px;

}

.tabla{
	
	float:right;
	text-align:center;
	width:75%;
	color:#12495B;
	height:50%;
}

.tabla > h2{
	color:#12495B;
	text-align:left;
	
}

.tabla_I{
	
   font-size:12px;
   text-align:left;
   border-spacing: 15px 10px;
   font-weight:bold;


   
}



.ver{
	text-decoration:none;
	padding: 3px 15px;
    font-weight: 600;
    font-size: 10px;
    color: #ffff;
    background-color:blue;
	
}

.tabla_3{
	
	border-collapse: collapse;
	width:95%;
	font-size:12px;
	font-weight:bold;
	border: RGB(186, 194, 195, .2)    1px solid;
	margin-right:1em;
}





.borde_bajo{
	
	border-bottom: #33CDFF 3px solid;
	text-align:center;

	
}

.bordebajo_otros{
	
  border-bottom: RGB(65, 209, 224)   1px solid;
}





