/*INICIO DE CABECERA*/

.cabecera{
	background:#FFF;
	height:75px;
	box-sizing:border-box;
	border-bottom:1px solid #E5E7E9;
	font-family:roboto;
	width:100%;
	display:flex;
	flex-wrap:wrap;
	justify-content:space-between;
	align-items:center; 
	flex-direction:row;
}

.subcontent_1{
	display:flex;
	align-items:center;
}

.cabecera .icon-menu{
	font-size:25px;
	color:#7F8C8D;
	display:inline-block;
	padding:20px 3px;
	
}

.cabecera .logo{
	padding:12px 3px 12px 90px;
	display:inline-block;
}

.cabecera .icon-search{
	margin-left:13px;
	display:inline-block;
}

.cabecera  input[type="search"]{

  margin:20px 0px 20px 15px;
  border:1px solid #E5E7E9;
  display:inline-block;
}

.cabecera .user{
    margin:10px 42px;
    display:inline-block;
}

/* FIN DE CABECERA */

/*----------------*/

/* INICIO DE MENU */

.menu{
	background:#FFF;
	width:238px;
	height:100%;
	box-sizing:border-box;
	font-family:roboto;
    position:absolute;
	display:flex;
	flex-direction:column;
	text-align:center;
	flex-wrap:wrap;
}

.menu h2{
    display:block;
	width:59px;
	color:#B3B6B7;
	font-size:12px;
	padding:8px 90px;
	margin:0;
	letter-spacing:8px;
	background:#dfe6e9;
	/* margin-bottom:8px; */
    font-family:serif;
}

.menu a{
	text-decoration:none;
	color:black;
	list-style:none;
	/* margin:0 1px 25px 1px; */
	font-size:12px;
	display:block;
	padding:13px;
}

.menu a:hover{
	color:#3498DB;
	background:#f5f6fa;
}

.menu span{
 margin-right:10px;
 color:#7F8C8D; 
}

/* FIN DEL MENU */

/*-------------*/

/* INICIO DE CUERPO */

.cuerpo{
	display:flex;
	flex-direction:column;
	width:70%;
	height:600px;
}

/*------------------*/

/* INICIO DEL LA SECCION */

.seccion{
	left:40px;
	position:absolute;
	transform:translate(220px,3px);
    font-family:roboto;
	font-weight:100;
	width: 70%;
    height: 70%;
	display:flex;
	flex-direction:column;
	flex-wrap:wrap;
}


.seccion h2{
  padding: 35px 5px;  
  font-family:montserrat;
  font-size:24px;
  font-weight:200;
  
}

.seccion a{
	text-decoration:none;
	color:#7F8C8D;
}

.seccion .tablero{
	color:#3498DB;
}

/* INICIO DE RECUADRO */

.recuadro{
	background:#FFF;
	width:100%;
	height:220px;
	border:1px solid #E5E7E9;
	box-sizing:border-box;
	display:flex;
	flex-direction:row;
	flex-wrap:wrap;
	overflow:auto;
}

.recuadro.tablero{
	background:#FFF;
	width:100%;
	height:220px;
	border:1px solid #E5E7E9;
	box-sizing:border-box;
	display:flex;
	flex-direction:column;
	flex-wrap:wrap;
}

.recuadro h3{
	
	margin-left:15px;
	padding:10px;
	font-size:15px;
	font-family:montserrat;
}

.recuadro p{
	
	margin-left:15px;
	color:#7F8C8D;
	padding:25px;
}

.recuadro form label{
	
	margin-left:15px;
    margin-right:45px;
	font-family:montserrat;
	font-weight:400;
}

.recuadro form{
	
	padding-left:24px;
    
}

.recuadro form input[type="button"]{
	
	margin-left:141px;
	margin-top:15px;
	color:#FFF;
	background:#3498DB;
	padding:5px 10px;
	border:none;
	outline:none;
	cursor: pointer;

}

.recuadro form input[type="text"]{
	
	
	padding:5px 7px;
	border:none;
	width:70%;
	border-bottom:2px solid #E5E7E9;

}


.recuadro .recuadro_titulo{
	width:100%;
	text-align:center;
}

.recuadro .eje-provedoras{
	font-size:15px;
	line-height:5px;
}

/* FIN DE RECUADRO */

