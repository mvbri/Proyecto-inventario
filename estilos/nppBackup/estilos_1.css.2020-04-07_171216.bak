body,html{
	margin:0;
	padding:0;
	/*font-family:encabezado;*/
	background-color: #F1F1F1 ;
}



@font-face{
	font-family:encabezado;
	src:url("../fonts/NotoSerifJP-ExtraLight.otf");
	
}

@font-face{
	font-family:tabla_3;
	src:url("../fonts/NotoSerifJP-Bold.otf");
	
}

@font-face{
	font-family:tabla_I3;
	src:url("../fonts/NotoSansKR-Bold.otf");
	
}
@font-face{
	font-family:titulo_p;
	src:url("../fonts/NotoSansKR-Light.otf");
	
}


.informes{
	
	background-color:#33CDFF;
	width:100%;
	height:18%;
	padding:0.2em;
}


.informes > h2{
  
  font-family:titulo_p;
  display:inline-block;
  color:#FFF;
  font-size:2.5em;
  padding:2px;
  margin-left:0.5em;

  
}

.icon-circle-left{
  font-size:35px;
  margin-left:1.5em;
  color:#FFF;
  
	
}

