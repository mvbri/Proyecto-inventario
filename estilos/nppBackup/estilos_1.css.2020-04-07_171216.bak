.caja_1{
	
	width:25%;
	float:left;
}

.boton_2{
	
	text-decoration:none;
	padding: 8px 13px;
    font-weight: 600;
    font-size: 20px;
    color: #ffff;
    background-color:blue;
	display:inline-block;
	margin:1.3em 0.1em 0.1em 1em;
  }

.subtitulo{
	
	margin:0.2em 0.1em 0.2em 1.2em;
	color:#12495B;
	font-size:18px;

}

.tabla{
	
	float:right;
	text-align:left;
	width:75%;
	color:#12495B;
	height:50%;
}

.tabla > h2{
	color:#12495B;
	text-align:left;
	
}

.tabla_I{
	
   font-size:12px;
   text-align:left;
   border-spacing: 10px 3px;
   font-weight:bold;
   font-family:tabla_I3;

   
}



.ver{
	text-decoration:none;
	padding: 3px 10px;
    font-weight: 600;
    font-size: 10px;
    color: #ffff;
    background-color:blue;
	display:block;
	width:60px;
	
}

.tabla_3{
	
	border-collapse: collapse;
	width:95%;
	font-size:10px;
	font-weight:bold;
	font-family:tabla_I3;
	border: RGB(186, 194, 195, .2)    1px solid;
	margin:3px 1px;

}





.borde_bajo{
	
	border-bottom: #33CDFF 3px solid;
	text-align:center;

	
}

.bordebajo_otros{
	
  border-bottom: RGB(65, 209, 224)   1px solid;
}

.icon-filter{
	 
   margin-left:6px;
}

