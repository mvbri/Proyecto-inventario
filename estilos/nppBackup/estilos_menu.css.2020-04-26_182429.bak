
body,html{
	margin:0;
	padding:0;
	background:#EAF2F8;
}

.content_p{
	background:#FFF;
	height:80px;
	box-sizing:border-box;
	border-bottom:1px solid #E5E7E9;
}

.content_p .icon-menu{
	font-size:25px;
	color:#7F8C8D;
	display:block;
	padding:25px 3px 8px 3px;
	float:left;
}

.content_p .logo{
	float:left;
	padding:12px 3px 12px 28px;
}

.content_p  input[type="search"]{

  margin:25px 10px;
  padding:3px 5px;
}


.sidebar{
	background:#FFF;
	width:240px;
	height:620px;
	box-sizing:border-box;
	margin-left:-30px;
}

.sidebar h2{
    display:block;
	text-align:center;
	color:#B3B6B7;
	font-size:12px;
	padding:8px 5px 1px 5px;
	margin:0;
}

.sidebar a{
	text-decoration:none;
	color:black;
}




.sidebar  ul li{
	list-style:none;
	margin:0 1px 25px 1px;
	font-size:15px;
}

.sidebar ul li span{
 margin-right:10px;
 color:#7F8C8D; 
}

.icon-chevron-right, .icon-chevron-small-down{
	float:right;
}



