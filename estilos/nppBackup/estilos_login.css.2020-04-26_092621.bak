
body{
	padding:0;
	margin:0;
	background:#F5F5F5;
	font-family:sans-serif;
}

.login-box{
	width:320px;
	height:420px;
	background:#BCD8F3;
	color:#FFF;
	top:50%;
	left:50%;
	position:absolute;
	transform:translate(-50%,-50%);
	box-sizing:border-box;
	padding:70px 30px;
}

.login-box .avatar{
	width:100px;
	height:100px;
	border-radius:50%;
	position:absolute;
	top:50px;
	left:calc(50% - 50px);
}