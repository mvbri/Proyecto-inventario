.content_p{
	background:#FFF;
	height:75px;
	box-sizing:border-box;
	border-bottom:1px solid #E5E7E9;
	font-family:roboto;
	width:100%;
	display:flex;
	flex-wrap:wrap;
	justify-content:space-between;
	align-items:center; 
}

.subcontent_1{
	display:flex;
	align-items:center;
}

.content_p .icon-menu{
	font-size:25px;
	color:#7F8C8D;
	display:inline-block;
	padding:20px 3px;
	
}

.content_p .logo{
	padding:12px 3px 12px 90px;
	display:inline-block;
}

.content_p .icon-search{
	margin-left:13px;
	display:inline-block;
}

.content_p  input[type="search"]{

  margin:20px 0px 20px 15px;
  border:1px solid #E5E7E9;
  display:inline-block;
}

.content_p .user{
    margin:10px 42px;
    display:inline-block;
}



.sidebar{
	background:#FFF;
	width:238px;
	height:100%;
	box-sizing:border-box;
	font-family:roboto;
    position:absolute;
	display:flex;
	flex-direction:column;
	text-align:center;
	flex-wrap:wrap;
}

.sidebar h2{
    display:block;
	width:59px;
	color:#B3B6B7;
	font-size:12px;
	padding:8px 90px;
	margin:0;
	letter-spacing:8px;
	background:#dfe6e9;
	/* margin-bottom:8px; */
    font-family:serif;
}

.sidebar a{
	text-decoration:none;
	color:black;
	list-style:none;
	/* margin:0 1px 25px 1px; */
	font-size:12px;
	display:block;
	padding:13px;
}

.sidebar a:hover{
	color:#3498DB;
	background:#f5f6fa;
}

