.contenido{
	left:40px;
	position:absolute;
	transform:translate(220px,3px);
    font-family:roboto;
	font-weight:100;
	width: 70%;
    height: 100%;
}


.contenido h2{
  padding: 35px 5px;  
  font-family:montserrat;
  font-size:24px;
  font-weight:200;
  
}

.contenido a{
	text-decoration:none;
	color:#7F8C8D;
}

.contenido .tablero{
	color:#3498DB;
}

.recuadro{
	background:#FFF;
	width:100%;
	height:220px;
	border:1px solid #E5E7E9;
	box-sizing:border-box;
}

.recuadro h3{
	
	margin-left:15px;
	padding:10px;
	font-size:15px;
	font-family:montserrat;
}

.recuadro p{
	
	margin-left:15px;
	color:#7F8C8D;
	padding:25px;
	/* font-family:montserrat;
	font-size:18px; */
}

.recuadro form label{
	
	margin-left:15px;
    margin-right:45px;
}

.recuadro form{
	
	padding-left:24px;
    
}

.recuadro form input[type="button"]{
	
	margin-left:141px;
	margin-top:15px;
	color:#FFF;
	background:#3498DB;
	padding:5px 10px;
	border:none;
	outline:none;
	cursor: pointer;

}

.recuadro form input[type="text"]{
	
	
	padding:5px 7px;
	border:none;
	width:70%;
	border-bottom:2px solid #E5E7E9;

}

