body,html{
	margin:0;
	padding:0;
	font-family:encabezado;
}

@font-face{
	font-family:encabezado;
	src:url("../fonts/NotoSansKR-Light.otf");
	
}

.informes{
	
	background-color:#33CDFF;
	width:100%;
	height:17%;
	padding:1em;
}


.informes > h2{
  
  font-family:encabezado;
  display:inline-block;
  color:#FFF;
  font-size:2.5em;
  margin:0.5em;

  
}

.boton_1{
	

  background-repeat:no-repeat;
  height:25px;
  width:40px;
  background-position:center;
}

.caja_1{
	
	width:35%;
	float:left;
}

.boton_2{
	
	text-decoration:none;
	padding: 11px;
    font-weight: 600;
    font-size: 20px;
    color: #ffff;
    background-color:blue;
	display:inline-block;
	margin:1.4em;
  }

.subtitulo{
	
	margin:0.2em 1.2em;
	color:#12495B;

}

.tabla{
	
	float:right;
	text-align:center;
	width:65%;
	color:#12495B;
}

.tabla > h2{
	color:#12495B;
	text-align:left;
	
}

.tabla_I{
	
   text-align:left;
   border-spacing: 15px 10px;

   
}



.ver{
	text-decoration:none;
	padding: 3px 15px;
    font-weight: 600;
    font-size: 10px;
    color: #ffff;
    background-color:blue;
	
}


.tabla_3, th, td {
   width: 25%;
   text-align: left;
   vertical-align: top;
   border: 1px solid #000;
}







