body,html{
	margin:0;
	padding:0;
	font-family:encabezado;
}

@font-face{
	font-family:encabezado;
	src:url("../fonts/NotoSansKR-Light.otf");
	
}

.informes{
	
	background-color:#33CDFF;
	width:100%;
	height:18%;
	padding:0.2em;
}


.informes > h2{
  
  font-family:encabezado;
  display:inline-block;
  color:#FFF;
  font-size:2.5em;
  padding:3px;

  
}

.boton_1{
	

  background-repeat:no-repeat;
  height:25px;
  width:40px;
  background-position:center;
}

.caja_1{
	
	width:25%;
	float:left;
}

.boton_2{
	
	text-decoration:none;
	padding: 8px;
    font-weight: 600;
    font-size: 20px;
    color: #ffff;
    background-color:blue;
	display:inline-block;
	margin:1em;
  }

.subtitulo{
	
	margin:0.2em 0.1em 0.2em 1.2em;
	color:#12495B;
	font-size:18px;

}

.tabla{
	
	float:right;
	text-align:center;
	width:75%;
	color:#12495B;
	height:50%;
}

.tabla > h2{
	color:#12495B;
	text-align:left;
	
}

.tabla_I{
	
   text-align:left;
   border-spacing: 15px 10px;

   
}



.ver{
	text-decoration:none;
	padding: 3px 15px;
    font-weight: 600;
    font-size: 10px;
    color: #ffff;
    background-color:blue;
	
}

.tabla_3{
	
	border-collapse: collapse;
	width:100%;
	font-size:13px;

}


.tabla_3 > tr  {
   width: 25%;
   text-align: left;

   border-bottom: 1px solid #C9EAF5;

}

.borde_bajo{
	
	border-bottom: #33CDFF 3px solid;
	text-align:center;

	
}






