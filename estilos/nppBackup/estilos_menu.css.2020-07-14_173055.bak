.content_p{
	background:#FFF;
	height:62px;
	box-sizing:border-box;
	border-bottom:1px solid #E5E7E9;
	font-family:roboto;
}

.content_p .icon-menu{
	font-size:25px;
	color:#7F8C8D;
	display:block;
	padding:20px 3px;
	float:left;
}

.content_p .logo{
	float:left;
	padding:12px 3px 12px 28px;
}

.content_p  input[type="search"]{

  margin:20px 0px 20px 15px;
  border:1px solid #E5E7E9;
}

.content_p .user{
	float:right;
    margin:10px;
}



.sidebar{
	background:#FFF;
	width:245px;
	height:630px;
	box-sizing:border-box;
	font-family:roboto;
    position:absolute;
	clear:both;
	float:left;

}

.sidebar h2{
    display:block;
	width:50px;
	color:#B3B6B7;
	font-size:12px;
	padding:8px 5px 1px 10px;
	margin:0;
		
}

.sidebar a{
	text-decoration:none;
	color:black;

}

.sidebar  ul{
	padding-left:10px;
	
}

.sidebar  ul li{
	list-style:none;
	margin:0 1px 25px 1px;
	font-size:13px;
}

.sidebar ul li span{
 margin-right:10px;
 color:#7F8C8D; 
}

.icon-chevron-right, .icon-chevron-small-down{
	float:right;
}

.contenido{
	left:40px;
	position:absolute;
	transform:translate(220px,3px);
    font-family:roboto;
	font-weight:100;
}

.contenido h2, h3{
	font-family:roboto;
	font-weight:100;
}

.contenido a{
	text-decoration:none;
	color:#7F8C8D;
}

.contenido a span{
	color:#3498DB;
}

.recuadro{
	background:#FFF;
	width:90%;
	height:220px;
	border:1px solid #E5E7E9;
	box-sizing:border-box;
}

.recuadro h3{
	
	margin-left:15px;
}

.recuadro p{
	
	margin-left:15px;
	color:#7F8C8D;
}

.recuadro form label{
	
	margin-left:15px;
    margin-right:45px;
}


.recuadro form input[type="button"]{
	
	margin-left:141px;
	margin-top:15px;
	color:#FFF;
	background:#3498DB;
	padding:5px 10px;
	border:none;
	outline:none;

}

.recuadro form input[type="text"]{
	
	
	padding:5px 10px;
	border:none;
	width:650px;
	border-bottom:2px solid #E5E7E9;

}

.terminos{
  display:flex;
}

.terminos span{
	color:#A6ACAF;
}

.terminos p{
  float:left;
  display:block;
  margin-top:1px;
  font-size:12px;
}


.terminos a{
  justify-content:space-between;
  margin-right:10px;
}

.icon-search{
	color:#7F8C8D;
	margin-left:1px;
}

a{
	text-decoration:none;
}

















