[class*="col-"]{
	float:left;
    /* border:1px solid #000;  */
	/* padding:5px; */
}

.contenedor{
  	position:relative;
	margin:auto;
	width:100%;
	height:auto;  
}

.fila{
	position:relative;
	margin:auto;
	width:100%;
	height:auto;
	clear:both;
	display:table;
}

/*<!---PRIMERA SECCIÓN-->*/

header{
	border-bottom:1px solid rgb(204, 209, 209);
	background:#FFF;
}

header .logo{
	font-size:15px;
	text-align:center;
	font-family:Caveat-Bold;
	line-height:14px;
	padding:8px 2px 0px 2px;
}

header .logo img{
    width:55px;
    height:55px;
    float:left;
	margin-left:10px;
}

header .logo span{
	/* color:#82E0AA ; */
	color:#48C9B0;
}


input, textarea { 
	font-family: FontAwesome, "Open Sans", Verdana, sans-serif;
    font-style: normal;
    font-weight: normal;
    text-decoration: inherit;
}

header .busqueda{
     padding-top:17px;	
}

header .busqueda input[type="search"]{
	padding: 4px 2px;
	text-align:center;
	background:url(../imgs/buscar_opa.png);
	background-repeat:no-repeat;
	background-position:right;
	background-size:contain;
	border-style:none;
	border:1px solid #EBEDEF;
}

header .busqueda .fa-bars{
	color:#AEB6BF;
	margin-left:18px;
	font-size:18px;
}

header .busqueda .fa-expand-arrows-alt{
	color:#AEB6BF;
	margin-left:15px;
	margin-right:8px;
	font-size:18px;
}

header .usuario{
   padding:10px;	
}

header .usuario img{
	width:50px;
	height:50px;
	float:right;
	border-radius:100%;
}

/*---FIN DE LA PRIMERA SECCIÓN--*/

/*-----------------------------*/

/*<!--SEGUNDA SECCIÓN------------->*/

/*---------INICIO DEL MENU-----*/

 nav{
   width:100%;
   background:#FFF;
   float:left;
   padding:0px;
}
 
nav .main{
   font-size:11px;
   padding:12px 18px;
   color:#909497;  
}


nav li a{
	display:inline-block;
    padding:12px 15px;
    width:100%;
    color:#5F6A6A ;	
	font-size:14px;
}

nav li a:hover{
	background:#F2F4F4;
}

nav li a .fa-anchor{
	margin-right:10px;
}

nav li a .fa-address-card{
	margin-right:10px;
}

nav li a .fa-border-all{
	margin-right:10px; 
}

nav li a .fa-warehouse{
	margin-right:10px;
}

nav li a .fa-shopping-cart{
	margin-right:10px;
}

nav li a .fa-user{
	margin-right:10px;
}
 
nav li a .fa-users{
	margin-right:10px;
}

nav li a .fa-file-invoice{
	 margin-right:10px;
}

nav li a .fa-file-invoice-dollar{
	margin-right:10px; 
}

nav li a .fa-hand-holding-usd{
	 margin-right:10px;
}

nav li a .fa-chevron-right{
	float:right;
	clear:both;
	font-size:10px;
}

nav ul li ul{
   display:none; 
   position:absolute;
   min-width:140px;
}

nav ul li ul a{
	padding-left:40px;
}

nav ul li:hover > ul{
  display:block;
  position:relative;
}

/*---------FIN DEL MENU-----*/

/*--------------------------*/


/*---------INICIO CUADRO DE INFORMACIÓN-----*/

.informacion{
  position:relative;
  float:right;
  right:0px;
  width:770px;
  height:auto;
  padding:20px;
  border-bottom:1px solid rgb(204, 209, 209);
}

.informacion h2{
  font-size:20px;
  margin-bottom:30px;
  color:#34495E;  
}

.informacion > div{
  background:#FFF;
  padding:20px 0px 20px 20px;  
}

.informacion div h3{
  font-size:16px;
  margin-bottom:10px; 
  color:#34495E;  
}

.informacion div p{
  font-size:13px;
  color:#95A5A6;
  margin-bottom:12px;
}

.informacion div label{
  margin-right:110px;
  font-size:14px;  
}

.informacion div input[type="text"]{
	width:510px;
	padding:8px;
	border-style:none;
	border-bottom:1px solid #EBEDEF;
}

.informacion div input[type="button"]{
	border:none;
	padding:5px 10px;
	background:#2196F3;
	color:#FFF;
	margin:10px 10px 5px 186px;
	border-radius:2px;
}

.informacion div input[type="button"]:hover{
	opacity:.4;
}

/* .informacion div input[type="button"]:active{
   opacity:1;	
} */

/*---------FIN CUADRO DE INFORMACIÓN-----*/

/*--------------------------*/

/*---INICIO DEL FOOTER------*/

footer p{
  display:inline-block;
  font-size:12px;
  margin-left:15px;
  margin-top:10px;  
}

footer p span{
  color:#5F6A6A;
}

footer a{
	font-size:12px;
	float:right;
	margin:10px 12px;
	color:#000;
}


/* PANTALLA DE ESCRITORIO GRANDE - LARGE (lg)*/


@media(min-width:1200px){

  .col-lg-12{width:100%;}
  .col-lg-11{width:91.66666666%;}
  .col-lg-10{width:83.33333333%;}
  .col-lg-9{width:75%;}
  .col-lg-8{width:66.66666666%;}
  .col-lg-7{width:58.33333333%;}
  .col-lg-6{width:50%;}
  .col-lg-5{width:41.66666666%;}
  .col-lg-4{width:33.33333333%;}
  .col-lg-3{width:25%;}
  .col-lg-2{width:16.66666666%;}
  .col-lg-1{width:8.33333333%;}
  .col-lg-0{display:none;}

  
}

