

*{
  margin:0;
  padding:0;
  text-decoration:none;
  font-family:sans-serif;
  box-sizing:border-box;
}

@font-face{
  font-family:Caveat-Bold;
  src:url(../fonts/Caveat-Bold.ttf) format('truetype');  
}

@font-face{
  font-family:Roboto-Bold;
  src:url(../fonts/Roboto-Bold.ttf) format('truetype');  
}

body{
  /* background:url(../imgs/menu.jpg); */
  background-repeat:no-repeat; 
  font-family:sans-serif;
}

div, header{
  border:1px solid #000;
  padding:5px;
  float:left; 
}

.contenedor{
  	position:relative;
	margin:auto;
	width:100%;
	height:auto;  
}

.fila{
	position:relative;
	margin:auto;
	width:100%;
	height:auto;
	clear:both;
	display:table;
}

/*<!---PRIMERA SECCIÃ“N-->*/

header .logo{
	font-size:18px;
	text-align:center;
	font-family:Caveat-Bold;
	line-height:14px;
	padding-left: 2px;
	padding-right:2px;
}

header .logo img{
    width:55px;
    height:55px;
    float:left;
}

header .logo span{
	/* color:#82E0AA ; */
	color:#48C9B0;
}


